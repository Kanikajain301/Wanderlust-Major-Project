<% layout ("/layouts/boilerplate") %>
<div class="row">
    
  <div class="col-8 offset-2">
  <h1>Edit Your Listing</h1>
    <form method="POST" action="/listings/<%= listid._id %>?_method=PATCH" novalidate class="needs-validation"  enctype="multipart/form-data"  >

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]"  value="<%=listid.title%>" type="text" class="form-control" required/>
        <div class="invalid-feedback">Please enter a valid title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required><%=listid.description%>  </textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

        <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" value="<%=listid.price%>"  class="form-control" required/>
        <div class="invalid-feedback">Please enter a valid price</div>
        </div>
        
          <div class="mb-3">
            original image <br>
            <img src="<%=originalImageUrl%>" />
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" type="file" class="form-control" />
          </div>
        
          <div class="mb-3">
         <label for="location" class="form-label">Location</label>
        <input name="listing[location]" value="<%=listid.location%>"  type="text" class="form-control" required/>
        <div class="invalid-feedback">Please enter a valid location</div>
        </div>
        
        <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" value="<%=listid.country%>" type="text" class="form-control" required/>
        <div class="invalid-feedback">Please enter a valid country</div>
        </div>

        <button>Edit</button>
      </form>
